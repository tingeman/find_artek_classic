# ==============================================
# Environment Variables for Find Artek Project
# ==============================================
# Copy this file to .env and customize the values
# Never commit the actual .env file to version control!

# Django Secret Key - Generate a new 50-character random string
# You can generate one at: https://djecrety.ir/
SECRET_KEY=your-django-secret-key-here-50-characters-long

# LDAP Authentication Password
LDAP_PASSWORD=your-ldap-password-here

# Google Maps API Key
GOOGLE_API_KEY=your-google-maps-api-key-here

# Django Debug Mode (true/false, 1/0, yes/no, on/off)
DEBUG=true

# Allowed Hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# SpatiaLite Library Path
SPATIALITE_LIBRARY_PATH=/usr/local/lib/mod_spatialite.so
